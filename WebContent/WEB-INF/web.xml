<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>test.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateLogin</servlet-name>
        <servlet-class>test.ValidateLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>test.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insertitemdetails</servlet-name>
        <servlet-class>test.Insertitemdetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePwd</servlet-name>
        <servlet-class>test.ChangePwd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateLogin</servlet-name>
        <url-pattern>/ValidateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insertitemdetails</servlet-name>
        <url-pattern>/Insertitemdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePwd</servlet-name>
        <url-pattern>/ChangePwd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
         
        </welcome-file-list>
    </web-app>
